</head>

<body>
    <nav class="navbar navbar-light navbar-expand-lg fixed-top bg-secondary text-uppercase" id="mainNav" style="height: 70px;">
        <div class="container"><img src="assets/img/logoBlanco.svg" style="height: 60px;filter: brightness(0%) contrast(200%) invert(100%);">
        <a class="navbar-brand" href="/dashboard/admin/editarPerfil">&nbsp; KIOSCO CARENTE</a><button data-bs-toggle="collapse" data-bs-target="#navbarResponsive" class="navbar-toggler text-white bg-primary navbar-toggler-right text-uppercase rounded" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i></button>
            <div class="collapse navbar-collapse nav_contenedor_botones" id="navbarResponsive">
                <ul class="navbar-nav ms-auto nav_lista_botones">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="/dashboard/admin/editarPerfil"><i class="fa fa-user"></i>&nbsp;PERFIL</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="../logout"><i class="fa fa-sign-out"></i>&nbsp;CERRAR SESIÓN</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <section id="albumes" class="portfolio" style="padding: 0px;height: 861.562px;margin-bottom: 0px;padding-top: 31px;">
        <div class="container text-center" style="margin-top: 60px;"><div><h1 class="text-uppercase text-center text-secondary" style="margin: 20px;height: 25px;margin-top: 69px;padding-top: 0px;">Bienvenido <%= nombre %></h1></div></div>
        <div class="container" style="padding-bottom: 60px;">
            <h3 class="text-uppercase text-center text-secondary" style="margin: 20px;height: 25px;margin-top: 11px;padding-top: 29px;">COLECCIONES</h3><a class="btn btn-primary" role="button" style="text-align: left;margin: 9px;margin-top: 35px;margin-left: 119px;" href="administradorCrearColeccion.html">Nueva Coleccion</a>
            
            <% colecciones.forEach(function(coleccion, i) { %>
                <% if(i%3===0){ %>
                    <div class="row text-start justify-content-center">
                  <% } %>
                  <div class="col-md-4 columnas_coleccion">
                    <div class="card"><img style="max-height:141px;" class="card-img-top w-100 d-block bg-danger bg-gradient border rounded-pill border-secondary shadow-lg" src=<%= coleccion.FotoAlbum %>>
                        <div class="card-body">
                            <h1 class="card-title" style="text-align: center;"><strong><%= coleccion.Nombre %></strong><br></h1>
                            <% if(coleccion.Estado === "Activa"){ %>
                                <h6 class="text-muted card-subtitle mb-2" style="text-align: center;background: rgb(157,224,156);"><%= coleccion.Estado %></h6>
                                <%}else{ %>
                                <h6 class="text-muted card-subtitle mb-2" style="text-align: center;background: rgb(238,195,195);margin-bottom: 6px;"><%= coleccion.Estado %></h6>
                            <%} %>
                            
                            <p class="card-text" style="text-align: justify;"><%= coleccion.Descripcion %><br></p><a class="btn btn-primary" role="button" style="text-align: left;" href=<%= "editarColeccion?nombreColeccion=" + coleccion.Nombre %>>Editar</a>
                        </div>
                    </div>
                </div>

                <% if(i%3===2){ %>

                </div>
            
                <% } %>
            
                <% }); %>
        </div>
    </section>
    <div style="margin-bottom: 20px;"></div>
    <div class="text-center text-white copyright py-4 fixed-bottom" style="padding-top: 0px;padding-bottom: 0px;padding-right: 0px;padding-left: 0px;margin-top: 0px;">
        <div class="container"><small>Copyright ©&nbsp;Carentes 2021</small></div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/bs-init.js"></script>
    <script src="/assets/js/freelancer.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.4.8/swiper-bundle.min.js"></script>
    <script src="/assets/js/script.js"></script>
    <script src="/assets/js/Simple-Slider.js"></script>
</body>

</html>